{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Server",
            "type": "shell",
            "command": "npx",
            "args": [
                "http-server",
                "${workspaceFolder}/build/html5"
            ],
        },
        {
            "label": "Start Haxe Incremental build",
            "type": "shell",
            "command": "haxe",
            "args": [
                "--wait",
                "6001"
            ],
        }
    ]
}
